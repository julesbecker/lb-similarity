doctype html
html
  head
    title= "Letterboxd Similarity"
    link(rel='stylesheet', href='../css/bootstrap.min.css')
    link(rel='stylesheet', href='../css/styles.css')

  body.text-center
    form.form-signin(method='POST' action='/compare')
      h1.h3.mb-3 Letterboxd similarity
      div.form-group
        label(for='user1') User 1:
        input#name.form-control(type='text', placeholder='username' name='user1')
      div.form-group
        label(for='user2') User 2:
        input#email.form-control(type='text', placeholder='username' name='user2')
      button.btn.btn-lg.btn-primary(type='submit') Calculate similarity
